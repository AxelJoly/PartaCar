{% extends 'base.html.twig' %}
{% block body %}
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />

<h1 class="header center teal-text text-lighten-2">PartaCar</h1>
<div class="row center">
	<h5 class="header col s12 light">
		Profil de 

		{{ profile.pseudo }}

	</h5>
</div>

<div class="row center">

	<div class="container z-depth-5">
		<ul class="collection">

			<div class="row">

				<div class="container containerImg">
					<img src="{{ profile.profilePic }}"
						class="image" style="width: 100%">
					
				</div>
			</div>


			<div class="row">

				<div class="input-field col s3 offset-s2">


					<li class="collection-item dismissable"><div>
							{{ profile.firstName }}
							<a href="#!" class="secondary-content" title="Prénom"><i
								class="material-icons prefix">perm_identity</i></a>
						</div></li>



				</div>
				<div class="input-field col s3 offset-s1">

					<li class="collection-item dismissable"><div>
							{{ profile.lastName }}
							<a href="#!" class="secondary-content" title="Nom"><i
								class="material-icons prefix">perm_identity</i></a>
						</div></li>
				</div>
			</div>

			<div class="row">
				<div class="input-field col s3 offset-s2">
					<li class="collection-item dismissable"><div>
							{{ profile.pseudo }}
							<a href="#!" class="secondary-content" title="Pseudo"> <i
								class="material-icons prefix">person_pin</i></a>
						</div></li>

				</div>
				<div class="input-field col s3 offset-s1">
					<li class="collection-item dismissable"><div>
							{{ profile.mail }}
							<a href="#!" class="secondary-content" title="E-Mail"> <i
								class="material-icons prefix">email</i></a>
						</div></li>

				</div>
			</div>

			<div class="row">
				<div class="input-field col s3 offset-s2">
					<li class="collection-item dismissable"><div>
							{{ profile.phoneNumber }}
							<a href="#!" class="secondary-content" title="Téléphone">
								<i class="material-icons prefix">stay_current_portrait</i>
							</a>
						</div></li>

				</div>
				<div class="input-field col s3 offset-s1">
					<li class="collection-item dismissable"><div>
							{{ profile.school }}
							<a href="#!" class="secondary-content" title="Ecole"> <i
								class="material-icons prefix">stars</i></a>
						</div></li>

				</div>
			</div>
			<div class="row">
				<div class="input-field col s3 offset-s2">
					<li class="collection-item dismissable"><div>
							{{ profile.birthdayProfile }}
							<a href="#!" class="secondary-content" title="Date de naissance">
								<i class="material-icons prefix">today</i>
							</a>
						</div></li>

				</div>
				<div class="input-field col s3 offset-s1">
					<li class="collection-item dismissable"><div>
							{{ profile.registerDateProfile }}
							<a href="#!" class="secondary-content" title="Date d'inscription"> <i
								class="material-icons prefix">query_builder</i></a>
						</div></li>

				</div>
			</div>




			<div class="row">
				<div class="input-field col s4 offset-s4">
					<li class="collection-item dismissable"><div>
							<a href="#!" class="secondary-content " title="Type de voiture"> <i
								class="material-icons prefix">directions_car</i></a>
							{{ profile.carType }}

						</div></li>
				</div>
				<div class="input-field col s4 offset-s4">
					<li class="collection-item dismissable"><div>
							<a href="#!" class="secondary-content"
								title="Déscription de la voiture"> <i
								class="material-icons prefix">description</i></a>
							{{ profile.description }}

						</div></li>
				</div>
			</div>
			<div class="row">
		
		   <a class='btn waves-effect waves-light' href='#'>Modification <i class="material-icons">mode_edit</i></a>
		
			</div>
		</ul>


	</div>

</div>




{% endblock %}